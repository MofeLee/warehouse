{
  "db": {
    "name": "db",
    "connector": "memory",
    "file": "db.json"
  },
  "elasticsearch": {
    "name": "elasticsearch",
    "connector": "elasticsearch",
    "ssl": {
      "ca": "./../cacert.pem",
      "rejectUnauthorized": true
    },
    "mappings": [
      {
        "name": "UserModel",
        "properties": {
          "id": {
            "type": "string",
            "index" : "not_analyzed"
          },
          "realm": {
            "type": "string",
            "index" : "not_analyzed"
          },
          "username": {
            "type": "string",
            "index" : "not_analyzed"
          },
          "password": {
            "type": "string",
            "index" : "not_analyzed"
          },
          "email": {
            "type": "string",
            "index" : "not_analyzed"
          },
          "emailVerified": {
            "type": "boolean"
          },
          "verificationToken": {
            "type": "string",
            "index" : "not_analyzed"
          },
          "status": {
            "type": "string",
            "index" : "not_analyzed"
          },
          "created": {
            "type": "date"
          },
          "lastUpdated": {
            "type": "date"
          }
        }
      }
    ]
  }
}
